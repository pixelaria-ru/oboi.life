mixin cart-product
  article.cart-product.flex
    .cart-product__img
      img(src='images/goods-wallpaper-1.jpg' alt='')
    .cart-product__info
      h6 Grandeco Textured 
      p Plains TP 
    .cart-product__number
      label(for="buy-num")
        input(type='number' id='buy-num'  value='120' min='1')
        span(onclick="this.previousElementSibling.stepUp()")
          +icon('right-arrow')
        span(onclick="this.previousElementSibling.previousElementSibling.stepDown()")
          +icon('right-arrow')
    .cart-product__price
      span 23 350 ₽
    +icon('close')
