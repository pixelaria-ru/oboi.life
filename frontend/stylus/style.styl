@import '../fonts/fonts.css'
@import 'inc/reset.styl'
$bg-repeat = repeating-linear-gradient(45deg,#f9f9f9,#f9f9f9 4px,#f0f0f0 4px,#f1f1f1 6px)
$color-fiolet-govna = #e35572
$color-xyeta = #f29b90
$color-hover-pink = #E8365B
.container
    max-width 1110px
    width 100%
    margin 0 auto
    position: relative;
.button-filtr
  display: none
.flex
    display flex
    flex-wrap wrap
@import "inc/header.styl"
.button
    border-radius 32px
    color #ffffff
    overflow hidden
    padding 20px 60px
    font-weight 400
    &--pink
        background $color-fiolet-govna
    &--grey
        background #333333
.main
    overflow hidden
    h2
        color #333333
        font-size 36px
        font-weight 300
        text-align center
        margin 80px 0 55px
        &.left
            text-align left

    @import 'inc/main__initial-screen.styl'
    &__smart-search
      margin: 150px 0 0
      hr
        margin: 100px 0 10px
      .flex
        align-items: center;
        justify-content: space-between;
      h2
        margin: 0;
        width: 49%
      form
        width 49%
      input[type='text']
        max-width: 400px;
        height: 60px;
        width: 63%
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
        border-radius: 32px;
        background-color: #ffffff;
        position: relative;
        right: -60px
        padding: 0 30px
        z-index: 0
      input[type='submit']
        width: 200px;
        height: 60px;
        padding: 0
        z-index: 1
        position: relative;
    &__updates-catalogue
      h2
        margin: 80px 0 70px;
    &__all-catalogue
        padding 40px 0 0
        .container
            max-width: 1140px;
        .flex
            justify-content center
        hr
            border 0
            height 1px
            background #333333
            margin 90px 0 0
    .box-goods
        margin-right: -30px;
        position: relative;

    .goods-wallpaper
        margin 0 30px 30px 0
        width 255px
        position relative
        &__footer
          overflow: hidden;
        .flex
            justify-content space-between
            align-items center
            .arrrow
              height: 10px;
              width: 75px;
              transition .7s
              margin-top: -1px
              margin-left: -155px;
              fill $color-xyeta


            .footer-bottom
              justify-content: space-between;
              width: 100%;
              transition .7s
              margin-right: 0px;
              align-items: center;
              .icon-ittle-thin-left-arrow
                  size 14px 14px
                  transform: rotate(180deg)
                  margin-right: 13px
          img
              width 100%
              margin-bottom 10px
              transition: .55s
        &__image
          position relative
          transition .55s
        &__type
            color #bfbfbf
            font-size 0.75em
            line-height 24px
        &__sale
          size 50px
          position absolute
          right: 0
          top 0
          border-radius 0 0 0 20px
          background-color $color-fiolet-govna
          color #fff
          z-index: 9
          font-family "Gotham Pro Medium"
          font-size 12px
          font-weight 500
          display flex
          justify-content: center
          align-items: center
          transition .55s
          &.sale--orange
            background-color $color-xyeta

        &__price
            color $color-xyeta
            line-height 24px
            span
                color #bfbfbf
                font-size 0.75em
        &__button
            padding 5px 23px
            transition .05s
            background 0

        &:hover,&:active
            cursor pointer
            .arrrow
              margin-left: -8px;
            .footer-bottom
                margin-right: -75px;
            .goods-wallpaper__sale,.goods-wallpaper__sale--orange
              transition .55s
              transform translate(5.75px,-5.75px)
        h3
            color #333333
            font-family "PT Sans"
            font-weight 400
            line-height 24px
    @import 'inc/main__sale.styl'
    &__all-catalogue
        .button
            margin 50px auto 90px
            display block
    @import 'inc/main__advantages.styl'
    @import 'inc/main__last-news.styl'
    @import 'inc/main__seo-text.styl'
@import 'inc/select.styl'
@import 'inc/hovers.styl'
@import 'inc/category.styl'
@import 'inc/page-product.styl'
@import 'inc/order.styl'
@import 'inc/cart-product.styl'
@import 'inc/news.styl'
@import 'inc/contacts.styl'
@import 'inc/footer.styl'
.button-filtr-close
  display: none;

#button-up
    size 60px 80px
    box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
    border-radius 32px
    background-color $color-fiolet-govna
    position fixed
    right 15%
    bottom 5%
    z-index 9
    transform: scale(.8);
    display none
    .icon
      transform: rotate(-90deg)
      fill #fff
      size 28px

.owl-prev,.owl-next
    size 60px
    box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
    position: absolute;
    background-color #ffffff
    top 220px
    display: flex;
    justify-content: center;
    align-items: center;
    .icon
      fill #333
      height 30px
      width 21px
.owl-prev
    left: 1px;
    transform: rotate(-180deg);
.owl-next
    right 1px
.cart-message
  background-image linear-gradient(-89deg, #ffda8f 0%, #ffc58d 6%, #ff9188 100%);
  position fixed
  bottom -140px
  width 100%
  transition .55s
  .container
    position:  relative;
  .icon
    width: 10px;
    height: 10px;
    fill #ffffff;
    position: absolute;
    right: 0
    top 0
    bottom 0
    margin auto
    cursor: pointer

  &.active
    bottom 0px
  p
    text-align center
    color #fff
    font-family "PT Sans"
    font-size 16px
    font-weight 400
    padding 9px 0
    a
      border-bottom: 1px solid #fff
      color #fff

.category
  &.main-cat,&.sub-cat
    .category-page
      padding: 65px 65px 0;

@import 'inc/adaptive.styl'
