&__last-news
    padding: 80px 0;
    background #f9f9f9 url(../images/wallpaper.jpg) no-repeat
    display: flex;
    align-items: center;
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.1);
    position relative
    background-position-x: center

    h2
        margin: 0 0 55px;
    .last-news
      &__link
          color $color-fiolet-govna
          font-family "PT Sans"
          font-weight 400
          border-bottom: 1px solid $color-fiolet-govna
          padding-bottom:1px
          transition .05s
          top: 10px
          position: relative
    .article-news


        h3
            color #333333
            font-family "PT Sans"
            font-weight 400
        &__date
            color #bfbfbf
            font-family "PT Sans"
            font-weight 400
            margin-right 40px
        &__img
            width: 40px;
            height: 40px;
            background-color: $color-xyeta
            border-radius: 50%;
            right: 10px;
            top: 10px;
            position: absolute;
        &-link
          width 560px
          box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
          border-radius 32px
          background-color #ffffff
          margin 20px 0
          padding 20px 30px
          justify-content space-between
          position relative
  
