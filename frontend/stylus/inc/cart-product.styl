.cart-products
  height 190px
  overflow-y: scroll;
  &::-webkit-scrollbar
    width: 3px
    background:  0
  &::-webkit-scrollbar-thumb
    width 2px
    background-color: #ffb875;

.cart-product
  align-items: center
  margin-bottom: 15px
  .icon
    width: 10px;
    height: 10px;
    fill #bfbfbf;
    &:hover
      fill #333

    cursor: pointer
  &__img
    size 50px

    img
      width: 100%
  &__number

    input
      width: 65px;
      height: 40px;
      background: 0;
      padding-left: 15px;
      -moz-appearance: textfield;
      &:-webkit-inner-spin-button
        display none
    label
      position: relative;

      box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2)
      color: #646464;
      background-color #ffffff
      font-size: 12px;
      text-align: center;
      display flex
      span
        .icon
          width: 9px;
          height: 9px;
          fill #bfbfbf
          position: absolute;
          transform: rotate(-90deg)
          right 11px
          cursor pointer
          &:hover
            fill #333
        &:nth-child(2)
          .icon
            top: 9px;
            background-size cover
        &:last-child
          .icon
            bottom: 9px
            transform: rotate(90deg)
            background-size cover
  &__info
    font-size: 12px;
    color: #333333;
    line-height: 22px;
    margin:0 8px 0 10px
    min-width: 96px;

    h6
      font-family: "PT Sans";

    p
      font-weight: 400;
  &__price
    color: #333333;
    font-family: "Gotham Pro";
    font-size: 12px;
    font-weight: 400;
    margin 0 10px 0
