.sidebar
  margin-bottom 20px
  line-height: 0;
  a,span
    color #bfbfbf
    font-family "Gotham Pro"
    font-size 12px
    line-height: 16px
.next-page
  text-align: center;
  width 100%
  padding: 22px 0
  position: relative;
  z-index: 1
  background: $bg-repeat




.category
  position: relative;

  padding-top: 115px;


  .cat-bg
    z-index: -1
    position: absolute;
    height 400px
    top 0
    border-bottom-left-radius 100%
    border-bottom-right-radius 100%
    width 200%
    left -50%
    box-shadow inset 0 1px 10px rgba(0, 0, 0, 0.1)
    background-image linear-gradient(0deg, #ffda8f 0%, #e04592 100%);
    &:before
      content ''
      position absolute
      border-bottom-left-radius 100%
      border-bottom-right-radius 100%
      left 0
      right 0
      top 0
      bottom 0
      background: repeating-linear-gradient(135deg,rgba(138,2,52,.05),#0000 3px,#0000 0px,#0000 9px)
  .category-page
    width 1240px
    background #ffffff
    margin 0 auto
    position relative
    padding 65px 65px
    z-index: 9;


    h1
      color #333333
      font-family "Gotham Pro"
      font-size 36px
      line-height: 48px
    &__aside
      width 255px
      h6
        color #333333
        font-family "Gotham Pro"
        font-size 24px
        margin-top 40px
      .category-aside-nav
        &.subcategory
          .aside-nav__menu
            margin-left: 13px
          h5
            font-family "Gotham Pro"
            font-size 16px
            line-height 28px
            margin 10px 0
            color #333333
            span
              border-bottom: 1px solid
        padding 20px 30px
        position: relative;
        border: 1px solid #d4d4d4;
        &:after
          content: ''
          background: $bg-repeat
          position: absolute;
          size 100%
          right: 5px
          top: 5px
          z-index: -1
      .aside-nav__menu
        position: relative;
        z-index: 1

      .aside-nav__menu-item
        font-family "Gotham Pro"
        font-size 16px
        line-height 28px
        margin 10px 0
        span,a
          color #333333
          cursor: pointer;
          transition: .45s
        &:hover
          span,a
            color $color-hover-pink
        &.active
          span,a
            padding-bottom: 3px
            border-bottom: 1px solid
            cursor pointer


    &__head-box
      margin-bottom: 46px;
      &.flex
        justify-content: space-between;
        .category_sale
          background-color #f9f9f9
          padding 25px 50px 20px 20px
          color #333333
          position relative
          max-height: 60px;
          z-index 1
          &:before
            transform skewX(-37deg)
            width: 70px
            height 60px
            position absolute
            left: -26px
            top 0
            content ''
            z-index -1
            background-color #f9f9f9

          &:after
            content ''
            width 20px
            height 70px
            position: absolute;
            right: 0;
            top: -8px;
            box-shadow -4px 4px 10px rgba(0, 0, 0, 0.1)
            background-image linear-gradient(to right, #f7f7f7 0%, #ffffff 45%, #ffffff 63%, #f1f1f1 100%)
          span
            color $color-xyeta
    &__content
        width calc(100% - 285px)
        margin-left 30px
        .content-sort
          align-items center
          border 1px solid #f1f1f1
          padding 23px 30px
          height 60px
          margin: 1px 0 50px;
          span
            margin-right 10px
          .sort-item
            cursor pointer
            color $color-xyeta
            margin 0 10px
          .sort-active
            color #bfbfbf
.category-aside__chekbox-pros
  margin-top: 23px
  .country__list
    margin-left 20px
    display: none;
    label
      margin 25px 0
      display flex
    .arrpw
      transform: rotate(180deg)
      transition: .55s
  .country
    margin: 20px 0
    cursor: pointer
    .flex
      justify-content: space-between;
      align-items: center;

    .bel
      i
        background: url(../images/svg/belgium.svg)
    .rus
      i
        background: url(../images/svg/russia.svg)
    .grm
      i
        background: url(../images/svg/germany.svg)
    .chn
      i
        background: url(../images/svg/china.svg)
    .itl
      i
        background: url(../images/svg/italy.svg)
    i
      background: url(../images/svg/flag.png)
      width 30px
      height 30px
      margin-right 10px
      margin-left 3px


    .arrpw
      background: url(../images/down-arrow.png)
      width 18px
      height 10px


  input
      display none

      &:checked + label
        color #333333
        &:before
          background-color #ffb875
          border 1px solid #ffb875


  label
    color #333333
    font-size 16px
    display flex
    cursor pointer
    align-items: center

    &:hover
      &:before
        border 1px solid $color-xyeta

    &:before
      content ''
      width 15px
      height 15px
      border 1px solid #bfbfbf
      display block
      margin-right 7px
  &.active
    opacity 1
    transform translateY(0)
    z-index 1
.category-aside__colors
  margin-top: 23px
  input[type="checkbox"]
    display none
    &:checked ~ svg
      &.icon-checked
        transform: scale(1)



    &:checked + label
      &.closes
        .icon-checked
          transform: scale(0)!important
      .icon-checked
        width 10px
        height 10px
        transform: scale(1)
  label
    width 30px
    height 30px
    border-radius 100px
    margin-right: 10px
    margin-bottom: 10px
    cursor pointer
    position relative
    display flex
    justify-content center
    align-items center
    box-shadow inset 0 0 4px rgba(0, 0, 0, 0.1)


    &.closes
      .icon-checked
        transform: scale(0)!important
      .icon-close
        transform: scale(1)!important
    &:hover
      .icon-checked
        transform: scale(1)

    .icon
      width 10px
      height 10px
      position: absolute;
    .icon-checked
      transform: scale(0)
      transition: .35s
      &.white
        fill #fff
    .icon-close
      transform: scale(0)
      transition: .5s
      &.white
        fill #fff
    &:hover
        span
          width 10px
          height 10px
          display block
          background url(../images/tick.png) no-repeat
    &.closes
        span
          width 10px
          height 10px
          display block
          background url(../images/letter-x.png) no-repeat!important


