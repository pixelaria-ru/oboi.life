.category-aside__figure
  margin-top: 23px
  input
    display none
    &:checked + label
      border 1px solid #ffb875
  label
    width 30px
    height 30px
    margin-right 8px
    margin-bottom: 8px
    cursor pointer
    border 1px solid #fff
    &:hover
      border 1px solid #ffb875
  .q1
    background url(../images/category-figure-1.png) no-repeat
  .q2
    background url(../images/category-figure-2.png) no-repeat
  .q3
    background url(../images/category-figure-3.png) no-repeat
  .q4
    background url(../images/category-figure-4.png) no-repeat
  .q5
    background url(../images/category-figure-5.png) no-repeat
  .q6
    background url(../images/category-figure-6.png) no-repeat

.category-aside__price
  margin-top: 23px
  label
    color #333333
    line-height 24px
    span
        font-weight 700
.price-radio-button
    margin-top: 25px
    input
      display none
      &:checked + label
        span
          &:before
            background $color-xyeta

    label
      color #333333
      align-items center
      display flex
      cursor pointer
      &:nth-child(2)
        margin-right 23px
      span
        width 24px
        height 24px
        box-shadow 0 0 5px rgba(0, 0, 0, 0.1)
        border-radius 100px
        background-color #ffffff
        display flex
        align-items center
        margin-right 10px
        &:before
          background-color #e4e4e4
          content ''
          width 16px
          height 16px
          border-radius 50%
          position absolute
          margin-left 4px
      sup
        font-size 12px
.category-aside__chekbox
  margin-top: 23px
  margin-left: -18px
  position: relative;
  input
      display none
      &:checked + label
        color #333333
        &:before
          background-color $color-xyeta
          border 1px solid $color-xyeta
    label
      font-size 14px
      margin-left 18px
      margin-bottom 20px
      color #333
      display flex
      align-items center
      cursor pointer
      width: 41%;
      &:hover
        &:before
          border 1px solid $color-xyeta
      &:before
        content ''
        width 15px
        height 15px
        border 1px solid #bfbfbf
        display block
        margin-right 7px
    &.active
      opacity 1
      transform translateY(0)
      z-index 1

#slider-range
  width 245px
  height 20px
  box-shadow inset 0 0 10px rgba(0, 0, 0, 0.1)
  background-color #f9f9f9
  position: relative
  margin-bottom: 30px
  .ui-slider-range
      height 20px
      box-shadow inset 0 0 10px rgba(0, 0, 0, 0.1)
      background-image linear-gradient(to right, $color-xyeta 0%, $color-fiolet-govna 100%)
      position: relative
      &:before
        content ''
        position absolute
        border-bottom-left-radius 100%
        border-bottom-right-radius 100%
        left 0
        right 0
        top 0
        bottom 0
        background: repeating-linear-gradient(135deg,rgba(138,2,52,.05),#0000 3px,#0000 0px,#0000 9px)
  .ui-slider-handle
    width 10px
    height 30px
    box-shadow -1px 0 5px rgba(0, 0, 0, 0.1)
    background-color rgba(216, 216, 216, 0)
    background-image linear-gradient(to right, #f7f7f7 0%, #ffffff 45%, #ffffff 63%, #f1f1f1 100%)
    position: absolute;
    top 0
    cursor pointer
.navigation
  display flex
  justify-content: flex-end;

  font-family "PT Sans"
  font-size 16px
  font-weight 400
  margin-top: 30px
  a,span
    margin-left: 10px
  a
    color #bfbfbf
    &:hover
