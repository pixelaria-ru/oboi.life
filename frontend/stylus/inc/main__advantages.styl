&__advantages
    box-shadow: inset 0 1px 10px rgba(0, 0, 0, 0.1);
    background-image: linear-gradient(0deg, #e04592 0%, #ffda8f 70%);
    position: relative;
    z-index: 0
    &:after
      content ''
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      z-index: 1
      background: repeating-linear-gradient(135deg,rgba(138,2,52,.05),#0000 3px,#0000 0px,#0000 9px)
    &:before
      content ''
      top 0
      width 150%
      left -25%
      border-bottom-left-radius 100%
      border-bottom-right-radius 100%
      position: absolute;
      margin-bottom: -50px;
      height: 400px
      margin-top: -300px;
      z-index: 3
      display: block
      background #fff
    .flex
        justify-content center
        align-items center
        padding 12% 0 8%
        z-index: 2
    .advantage
        width 33%
        h4
            font-size 24px
            font-weight 300
            line-height 28px
            color #ffffff
            margin 20px 0 10px
            text-align center
        p
            color #ffffff
            font-family "PT Sans"
            font-weight 400
            line-height 24px
            max-width 260px
            text-align center
            margin 0 auto
        &__img
            width 100px
            height 100px
            margin 0 auto
            background-color #ffffff
            border-radius 50%
            justify-content center
            align-items center
            padding: 0;
            .icon
              width 50px
              height 50px
              fill #333333
