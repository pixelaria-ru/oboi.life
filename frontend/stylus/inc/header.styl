.header
    position: relative;
    z-index: 10
    .up-line
        background #333333
        .flex
            justify-content space-between
            align-items center
            height 30px
        &--adress,&--info
            &__item
                &:not(:last-child), &:not(:first-child)
                    padding-left 10px
                    padding-right 10px
                &:last-child
                    border 0
                    padding-left 10px
                    padding-right 0
                &:first-child
                    padding-right 10px
                    padding-left 0
                &:not(:last-child)
                    &:after
                      position: relative;
                      left: 10px;
                      height: 10px;
                      display: inline-block;
                      top: 2px;
                      content ''
                      border-right 1px solid #fff
                a,span
                    font-size 12px
                    color #ffffff
    .main-header
        position absolute
        width 100%
        padding 30px 0
        z-index 1
        &.fixed
          position: fixed;
          width: 100%;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
          background-color: #ffffff;
          transition: .6s
          top -130px
          &.active
            top: 0px;
          .logotype
            .logo-img
              width 50px
              height 50px

            span
              color #333
          .main-header--right__search
            input
              border-color: #333
              color: #333
              &::placeholder
                color #333
          .main-header--right__search.active
            .icon
              fill #333
          .menu__item a
            color: #333
          .icon
            fill #333
          .mobile-menu
            color: #333;
            border: 2px solid #333;
          .menu__item a::after
            border-bottom: 1px solid $color-xyeta
          .main-header--right__cart
            span
              background: $color-fiolet-govna
              color: #fff
        .mobile-menu
          color #ffffff
          font-family "PT Sans"
          font-size 16px
          font-weight 400
          border-radius 32px
          border 2px solid #ffffff
          padding 15px 50px
          margin-left 30px
          display none
        .container
            justify-content space-between
            align-items center
            position: relative;
        &--left
            .logotype
                align-items center
                .logo-img
                  width 50px
                  height 50px
                span
                    color #ffffff
                    font-family "PT Sans"
                    margin 0 70px 0 15px
            .menu
                align-items center

                &__item
                    margin 0 10px
                    a
                        color #ffffff
                        font-family "PT Sans"
                        transition .1s
                        position  relative
        &--right
            &__search,&__cart
                width 30px
                height 30px
                cursor pointer
            &__search
                position relative
                display flex
                align-items center
                transform: translateX(0px);
                .icon
                  size 30px
                  fill #ffffff
                  right 0px
                  position: relative;
                  transition: .55s

                input
                  width 0
                  height 60px
                  border 1px solid #fff
                  background: 0
                  border-radius 32px
                  color #fff
                  opacity 0
                  position absolute
                  right 0
                  font-family "PT Sans"
                  font-weight 400
                  z-index 1
                  &::placeholder
                    color #fff


            &__cart-open
              width: 370px;
              height: 345px;
              box-shadow: 0 2px 10px rgba(206, 206, 206, 0.5);
              border-radius: 32px;
              background-color: #ffffff;
              position: absolute;
              padding: 30px 0 0 30px
              right: -20px
              top: -15px
              transform: scale(0)
              transition .55s
              opacity: 0
              transform-origin top right
              &.active
                transform: scale(1)
                opacity: 1
              h5
                color: #333333;
                font-family: "PT Sans";
                font-size: 16px;
                font-weight: 400;
                margin-bottom: 23px

              .cart-open__continue-buy
                color: #333333;
                font-family: "PT Sans";
                font-size: 12px;
                font-weight: 400;
                margin-right: 15px
                border-bottom: 1px solid #333333
                transition: .25s
                &:hover
                  border-bottom: 1px solid #fff

              .cart-open__footer
                position: absolute;
                bottom: 30px
                right 20px
                align-items: center
                .button
                  font-family: "PT Sans";
                  font-size: 12px;
                  font-weight: 400;
                  padding: 13px 26px;
            &__cart

                margin-left 20px
                position relative
                &.active
                  z-index: 999
                  .icon
                    fill $color-fiolet-govna
                  span
                    background-color: $color-fiolet-govna;
                    color #fff
                .icon
                  size 30px
                  fill #ffffff

                span
                    width 24px
                    height 24px
                    position absolute
                    background #fff
                    text-align center
                    line-height 25px
                    border-radius 50%
                    top -11px
                    left 16px
                    font-size 0.75em
                    color #ff8075
                    font-weight 500
            &__mobile-hamburger
                background url(../images/mobile-hamburger.png) no-repeat
                margin-left 25px
                position relative
                height 30px
                width 50px
                cursor pointer
                display none
