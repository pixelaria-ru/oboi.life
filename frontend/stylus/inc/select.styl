.category-aside__colors
  label
    &:before
      content: attr(data-title)
      background: #333333e6
      padding: 3px 6px
      font-size: 13px
      color #fff
      position: relative;
      top: -60px
      position: absolute
      transition: .2s linear
      opacity: 0
      visibility: hidden;
    &:after
      position: absolute
      content: "";
      width: 0;
      height: 0;
      border: 7px solid transparent;
      border-top-color: #333333e6
      bottom: 53px;
      left: calc(50% - 7px);
      transition: .2s linear
      opacity: 0
      visibility: hidden;
    &:hover
      &:before
        opacity 1
        top: -30px
        visibility: visible;
      &:after
        visibility: visible;
        opacity 1
        bottom: 23px


