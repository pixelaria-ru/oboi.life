.sexy-select
  color #333
  width 100%
  min-height 60px
  padding 0 25px
  background #fff
  align-items center
  cursor pointer
  position relative
  z-index 2
  overflow: hidden



  &__list
    background #fff
    margin-top 5px
    padding 21px 10px 21px 20px

    cursor pointer
    opacity 0
    transition .4s
    transform translateY(25px)
    z-index -1
    width 100%
    .category-aside__colors
      margin-top: 0
    .flex
      align-items: flex-start;
      justify-content: space-between;
    hr
      height 1px
      border 0
      margin: 10px 0 20px
      background-color #bfbfbf
    h6
      width:30%;
      color #333333
      font-family "PT Sans"
      font-size 16px
      font-weight 400
    #osn,#pok
      width: 70%;
      margin-top: 0;
      margin-left: 0;
      label
        font-size: 12px
        margin-left: 9px;
        margin-bottom: 9px;
        width: 45%;
        &:before
          width 14px
          height 14px

    &.select--prices
      padding 25px 20px 0
      hr
        height 1px
        background-color #bfbfbf
        border 0
        margin-top 25px
      .price
        color #333333
        font-family "PT Sans"
        font-size 16px
        font-weight 400
        line-height 24px

        .cont-box
          padding: 6px 9px
          margin: 0 4px;
          box-shadow inset 0 0 5px rgba(0, 0, 0, 0.2)
          background-color #ffffff
          &:last-child
            margin: 0 0 0 4px
    &.active
      opacity 1
      transform translateY(0)
      z-index 3

 .close
   position absolute
   right -5px
   top -5px
   z-index 3
   background $color-fiolet-govna
   border-radius 50%
   border 0
   width 24px
   height 24px
   cursor pointer
   outline none
   display: flex;
   justify-content: center;
   align-items: center;
   .icon
     width 10px
     height 10px
     fill #ffffff
  .dnone
   display none!important
 .select-box
   position relative
 .none
   &:before
